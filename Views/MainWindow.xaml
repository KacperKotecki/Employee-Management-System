<mah:MetroWindow x:Class="Employee_Management_System.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_Management_System"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Employee Management System" Height="450" Width="1000">
        
    <Grid Margin="0,0,-245,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
  
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding AddEmployeeCommand}" Content="Add Employee" Width="200" Height="50" Margin="10" />
            <Button Content="Edit Employees"  Width="200" Height="50" Margin="10"/>
            <Button Content="Delete Employees" Width="200" Height="50" Margin="10"/>
            <ComboBox Height="50" Width="35" Margin="10"  />
            <TextBox Text="{Binding EditTextBox}" Height="50" Width="200" Margin="10" />
        </StackPanel>
        <DataGrid Grid.Row="1" Margin="10,5,260,15" />
    </Grid>
</mah:MetroWindow>
